<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/textView"
            android:layout_width="327dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:text=""
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="60dp"
            />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="Save Into shared Preference"
            tools:layout_editor_absoluteX="0"
            tools:layout_editor_absoluteY="0"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:id="@+id/btnUppercase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@android:color/black"
            android:text="Convert to uppercase and save into Shared Preferences"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="159dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Old Data"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="324dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:elevation="2dp"
            />

        <TextView
            android:id="@+id/displayTextView"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:paddingTop="16dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="368dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>